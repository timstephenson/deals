<!DOCTYPE html>
<html>
<head>
  <title><%= @deal.proposition %></title>
 
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->

  <%= stylesheet_link_tag    "bootstrap", :media => "all" %>
  <%= stylesheet_link_tag    "entertainment/assets/stylesheets/deals", :media => "all" %>

  <script type="text/javascript">
    var aaDealPath = '<%= deal_path @deal, :format => "json" %>';
  </script>

  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tag %>

</head>

<body>
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a class="brand" href="#"><%= entertainment_deal_description(@deal.advertiser_publisher_name) %></a>
      </div>
    </div>
  </div>

    <div class="container">
      
      <% flash.each do |name, msg| %>
      <div class="row">
        <div class="span16">
          <div class="alert alert-<%= name == :notice ? "success" : "warning" %>">
            <a class="close" data-dismiss="alert">Ã—</a>
            <%= msg %>
          </div>
        </div>
      </div>
      <% end %>
      
<%= yield %>

      <footer>
        <p><%= entertainment_deal_description(@deal.advertiser_publisher_name) %></p>
      </footer>

    </div> <!-- /container -->
</body>
</html>
